extends layout

block content
  h1 Books
  p 
    a(class="button" href="/books/new") Create New Book
  table
    thead
      tr
        th Titile
        th Author
        th Genre
        th Year
    tbody
      each book in books
        - const href = `/books/${book.id}`;
          tr
            td
              a(href=href)= book.title
            td= book.author
            td= book.genre
            td= book.year